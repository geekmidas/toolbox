{
  "name": "@geekmidas/emailkit",
  "version": "0.0.0",
  "description": "Type-safe email client with SMTP support and React templates",
  "author": "Geekmidas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geekmidas/toolbox"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./templates": {
      "types": "./dist/templates.d.ts",
      "import": "./dist/templates.js",
      "require": "./dist/templates.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "nodemailer": "^6.9.7",
    "react": "~19.1.0",
    "react-dom": "~19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsdown": "^0.2.17",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
